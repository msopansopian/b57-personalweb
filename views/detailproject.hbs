<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form My Project</title>
    <!-- link awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- css -->
    <link rel="stylesheet" href="/assets/css/navbar.css" />
    <link rel="stylesheet" href="/assets/css/detailproject.css" />

    <!-- CDN BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

  </head>
  <body>
    <!-- NAVBAR BOOTSTRAP -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="/assets/img/dumbways.png" style="height: 50px" class="rounded-circle" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active text-white" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/addproject">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          <a href="/contact"><button class="btn btn-danger btn-lg" type="submit">Contact Me</button></a>
        </div>
      </div>
    </nav>

    <!-- DETAIL PROJECT -->
    <div class="container bg-white mx-auto p-5">
      <div class="project-detail">
        <div class="project-detail-container" id="detail-project ">

          <h1 id="project-title" class="text-center mb-5">{{detail.projectname}}</h1>

          <div class="author d-flex">
            <img src="" alt="foto-detail" class="img w-50" id="project-image" />

            <div class="duration">
              <h4 class="w-100">Duration</h4>
              <h5 class="w-100 mt-2"><i class="fa-regular fa-calendar-days"></i> <span id="start-date">{{detail.startdate}}</span> | <span id="end-date">{{detail.enddate}}</span> </h5>
              <h5><i class="fa-solid fa-clock" id="duration"></i> {{detail.duration}}</h5>

              <div class="tech d-flex flex-wrap justify-content-between" id="tech-list">
                <h4 class="w-100">tekhnologi</h4>
                {{#if detail.nodejs}}
                  <i class="fa-brands fa-node-js" style="padding: 10px;"></i>
                {{else}}
                {{/if}}
                {{#if detail.reactjs}}
                  <i class="fa-brands fa-react" style="padding: 10px;"></i>
                {{else}}
                {{/if}}
                {{#if detail.typescript}}
                  <i class="fa-solid fa-subscript" style="padding: 10px;"></i>
                {{else}}
                {{/if}}
                {{#if detail.angular}}
                  <i class="fa-brands fa-angular" style="padding: 10px;"></i>
                {{else}}
                {{/if}}
              </div>

            </div>

          </div>
        </div>
      </div>

      <p class="description" id="description">{{detail.description}}</p>
    </div>

    <script src="assets/js/detailproject.js"></script>

    <!-- JS Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>