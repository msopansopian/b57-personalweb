<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS -->
    <link rel="stylesheet" href="assets/css/navbar.css" />
    <link rel="stylesheet" href="assets/css/contact.css" />

    <!-- ICON AWESOME-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- CDN BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <title>contact</title>
  </head>
  <body>
    <!-- NAVBAR BOOTSTRAP -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="assets/img/dumbways.png" style="height: 50px" class="rounded-circle" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active text-white" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/addproject">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          <a href="/contact"><button class="btn btn-danger btn-lg" type="submit">Contact Me</button></a>
        </div>
      </div>
    </nav>

    <!-- CONTACT -->
    <h1 class="title-contact text-center pt-4 text-white">GET IN TOUCH</h1>
    <div class="container d-flex justify-content-center align-items-start pt-4" style="min-height: 70vh">
      <form class="form-contact d-flex flex-column" style="width: 50vw; height: 80%" onsubmit="sendEmail(event)">
        <label class="label-contact text-white fw-bold text-center" style="font-size: 15px;">Name</label>
        <input type="text" class="input-contact mb-3" id="inputName" />
        <label class="label-contact text-white fw-bold text-center" style="font-size: 15px;">Email</label>
        <input type="text" class="input-contact mb-3" id="inputEmail" />
        <label class="label-contact text-white fw-bold text-center" style="font-size: 15px;">Phone Number</label>
        <input type="text" class="input-contact mb-3" id="inputPhoneNumber" />
        <label class="label-contact text-white fw-bold text-center" style="font-size: 15px;">Subject</label>
        <select class="input-contact mb-3" id="inputSubject">
          <option></option>
          <option>Front End Developer</option>
          <option>Back End Developer</option>
          <option>Fullstack Developer</option>
        </select>
        <label class="label-contact text-white fw-bold text-center" style="font-size: 15px;">Your Message</label>
        <textarea class="input-contact mb-3" style="resize: none; height: 80px;" id="inputMessage"></textarea>
        <input type="submit" value="submit" class="submit-contact bg-dark text-white p-1 rounded" />
      </form>
    </div>

    <script src="assets/js/contact.js"></script>
    <!-- JS Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>